    <children>
        <Label fx:id="labelNotFound" layoutX="100" layoutY="220" textFill="red" />

        <Pane prefHeight="90.0" prefWidth="400.0">
            <children>
                <Label layoutX="93.0" layoutY="35.0" text="Sistema de Gestión ">
                    <font>
                        <Font name="Bodoni MT Black" size="23.0" />
                    </font>
                </Label>
                <Label layoutX="114.0" layoutY="66.0" text="Aeropuertos-Rutas de Vuelo">
