            <children>

                <Label layoutX="29.0" layoutY="19.0" text="Rol:" />
                <Label fx:id="labelRol" layoutX="107.0" layoutY="10.0" style="-fx-font-weight: bold;" />

                <Label layoutX="18.0" layoutY="50.0" text="Usuario:" />
                <TextField fx:id="textUser" layoutX="107.0" layoutY="46.0" />

